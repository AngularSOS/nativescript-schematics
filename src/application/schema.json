{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsAngularComponent",
  "title": "Angular Application Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the app.",
      "alias": "n"
    },
    "sourceDir": {
      "type": "string",
      "description": "The path of the source directory.",
      "default": "app",
      "alias": "sd"
    }
  },
  "required": [
    "name"
  ]
}
